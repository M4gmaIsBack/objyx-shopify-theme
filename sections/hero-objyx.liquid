{{ 'section-hero-objyx.css' | asset_url | stylesheet_tag }}

<section
  class="hero-objyx"
  aria-label="{{ section.settings.heading | default: 'Hero' }}"
  style="--hero-bg-desktop: url('{{ 'hero_section.png' | asset_url }}'); --hero-bg-mobile: url('{{ 'hero_section_mobile.png' | asset_url }}');"
>
  <div class="hero-objyx__container">
    <div class="hero-objyx__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="hero-objyx__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <div class="hero-objyx__text">{{ section.settings.text }}</div>
      {%- endif -%}
      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a class="hero-objyx__button" href="{{ section.settings.button_link }}">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "OBJYX - Hero",
  "class": "section-hero-objyx",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "-20 % sur les déguisements et accessoires"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Texte",
      "default": "<p>Jusqu'au 06/02/2026 à 7h30 | Dans la limite des stocks disponibles | Offre soumise à conditions</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Label du bouton",
      "default": "Voir la collection carnaval"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "OBJYX - Hero"
    }
  ]
}
{% endschema %}
